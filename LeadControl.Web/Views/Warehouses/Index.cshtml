@using LeadControl.Web.Classes.Ext
@model System.Collections.Generic.List<LeadControl.Domain.Entities.Warehouse>

@{
    ViewBag.Title = "Склады";
    Layout = "../Shared/AccountLayout.cshtml";
}

@foreach (var group in Model.GroupBy(p => p.Project))
{
    <div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="icon"><i class="icon20 i-home-2"></i></div>
                <h4>@group.Key.Title</h4>
                <a href="#" class="minimize"></a>
            </div>
            <!-- End .panel-heading -->
            <div class="panel-body">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>
                                ИД
                            </th>
                            <th>
                                Наименование
                            </th>
                            <th>
                                Город
                            </th>
                            <th>
                                Адрес
                            </th>
                            <th>
                                Товаров
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var warehouse in group)
                        {
                            <tr>
                                <td>
                                    <a href="/warehouses/@warehouse.Id/edit">@warehouse.Id</a>
                                </td>
                                <td>
                                    <a href="/warehouses/@warehouse.Id/edit">@warehouse.Title</a>
                                </td>
                                <td>
                                    <a href="/warehouses/@warehouse.Id/edit">@warehouse.City</a>
                                </td>
                                <td>
                                    <a href="/warehouses/@warehouse.Id/edit">@warehouse.Address</a>
                                </td>
                                <td>
                                    @warehouse.WarehouseProducts.Sum(p => p.Quantity) шт.
                                </td>
                                <td style="width: 35px">
                                    <a href="/warehouses/@warehouse.Id/edit" class="btn btn-xs btn-warning tip" title="Редактировать остатки на складе"><i class="icon12 i-pen-3"></i></a>    
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
}