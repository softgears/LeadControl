@model LeadControl.Domain.Entities.LeadOrder

@{
    ViewBag.Title = "Создание нового заказа. Шаг 2 - Заполнение позиций";
    Layout = "../Shared/AccountLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="icon"><i class="icon20 i-cart"></i></div>
                <h4>Позиции заявки</h4>
                <a href="#" class="minimize"></a>
            </div>
            <div class="panel-body">
                @Html.Partial("OrderItemsEditor",Model)
                <p style="margin-top: 10px">
                    <a class="btn btn-success tip" title="Завершить редактировать позиции заявки и перейти к редактированию информации по доставке" href="/orders/create-info/@Model.Id">Продолжить</a>
                </p>
            </div>
        </div>
    </div>
</div>

